@import "materialize/components/color";
$primary-color: color("indigo", "darken-1") !default;
@import 'materialize';

.space-it {
  margin: 40px 0;
}

.fullpage {
  .instructions i {
    margin-left: 5px;
  }
  .survey-text, .survey-question {
    label {
      top: 3.25em;
      left: auto;
    }
    textarea.materialize-textarea:focus:not([readonly]) ~ label {
      top: 2.5em;
      font-size: 1rem;
    }

    textarea {
      border-left: 3px solid color('teal', 'lighten-1');
      padding: 10px 7px;
    }

    input[type=text] {
      margin-left: 43px;
    }
    input[type=text] ~ label {
      position: relative;
      margin-left: 43px;
      top: -75px;
    }
  }
  .survey-question textarea {
    margin-bottom: 35px;
  }
  & > ul.collapsible.popout {
    padding: 0 7px;
  }
}

.ticket {
  .survey-history {
    h5 > i {
      margin: 0 5px;
    }
    .ticket-id {
      display: none;
    }
  }
}

#toast-container {
  @media #{$medium-only} {
    min-width: 8%;
    top: 10%;
    right: 7%;
    left: 7%;
    bottom: auto;
  }
}

.toast {
  @media #{$medium-only} {
    float: right;
  }
}

.results-pie, .admin-pie {
  width: 450px;
  height: 300px;
  float: left;
}

.clear {
  clear: left;
}

.graph-container {
  overflow: visible;
}

.ask-survey {
  margin: 20px;
  nav {
    div {
      background: linear-gradient(to bottom, #549FFA, #4667D3);
    }
    .page-title {
      position: absolute;
      left: 71px;
    }
  }

  .brand-logo img {
    height: 64px;
  }
}
