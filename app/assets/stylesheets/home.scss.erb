@import "materialize/components/color";
$primary-color: color("blue", "lighten-2") !default;
@import 'materialize';

.space-it {
  margin: 40px 0;
}

.fullpage {
  .instructions i {
    margin-left: 5px;
  }
  .survey-text {
    label {
      top: 3.25em;
      left: auto;
    }
    textarea.materialize-textarea:focus:not([readonly]) ~ label {
      top: 2.5em;
      font-size: 1rem;
    }

    textarea {
      border-left: 3px solid color('teal', 'lighten-1');
      padding: 10px 7px;
    }
  }
  & > ul.collapsible.popout {
    padding: 0 7px;
  }
}

.ticket {
  .survey-history {
    h5 > i {
      margin: 0 5px;
    }
    .ticket-id {
      display: none;
    }
  }
}

#toast-container {
  @media #{$medium-only} {
    min-width: 8%;
    top: 10%;
    right: 7%;
    left: 7%;
    bottom: auto;
  }
}

.toast {
  @media #{$medium-only} {
    float: right;
  }
}
