@import "materialize/components/color";
$primary-color: color("blue", "lighten-2") !default;
@import 'materialize';

.fullpage {
  .instructions i {
    margin-left: 5px;
  }
  .space-it {
    margin: 40px 0;
  }
}

#toast-container {
  @media #{$medium-only} {
    min-width: 8%;
    top: 10%;
    right: 7%;
    left: 7%;
    bottom: auto;
  }
}

.toast {
  @media #{$medium-only} {
    float: right;
  }
}
