@import "materialize/components/color";
$primary-color: color("blue", "darken-2") !default;
$secondary-color: color("blue", "darken-3") !default;
@import 'materialize';

.space-it {
  margin: 40px 0;
}

.fullpage {
  .instructions i {
    margin-left: 5px;
  }
  .survey-text, .survey-question {

    textarea {
      border-left: 3px solid $secondary-color;
      padding-left: 7px;
    }

    textarea + label {
      top: 0.6em;
    }

    p.input-field.s6 {
      margin-left: 3em;
    }

  }

  & > ul.collapsible.popout {
    padding: 0 7px;
  }
}

.ticket {
  .survey-history {
    h5 > i {
      margin: 0 5px;
    }
    .ticket-id {
      display: none;
    }
  }
}

#toast-container {
  @media #{$medium-only} {
    min-width: 8%;
    top: 10%;
    right: 7%;
    left: 7%;
    bottom: auto;
  }
}

.toast {
  @media #{$medium-only} {
    float: right;
  }
}

.results-pie, .admin-pie {
  float: left;
}

.clear {
  clear: left;
}

.graph-container {
  overflow: visible;
}

.ask-survey, .survey-done {
  margin: 20px;
  nav {
    div {
      background: linear-gradient(to bottom, #549FFA, #4667D3);
    }
    .page-title {
      position: absolute;
      left: 71px;
    }
  }

  .brand-logo img {
    height: 64px;
  }
  p.input-field.s12 {
    margin-top: 35px;
  }
  textarea {
    border-left: 3px solid $secondary-color;
    padding-left: 7px;
  }

  textarea + label {
    top: 0.6em;
    padding-left: 7px;
  }

  input[type="radio"] {
    opacity: 0;
    z-index: -999;
    visibility: visible;
    left: 0;
  }


}
